{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "video"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "updater:allow-check",
    "updater:allow-download",
    "updater:allow-download-and-install",
    "updater:allow-install",
    "sql:allow-execute",
    "sql:allow-load",
    "sql:allow-select",
    "sql:allow-close",
    "sql:default",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:scope-video",
    "fs:write-all",
    "fs:allow-mkdir",
    "fs:allow-open",
    "fs:allow-read",
    "fs:allow-read-file",
    "fs:allow-remove",
    "fs:allow-write",
    "fs:write-files",
    "fs:allow-create",
    "fs:allow-appconfig-write-recursive",
    "fs:allow-appconfig-read",
    "fs:allow-appdata-read-recursive",
    "fs:allow-appdata-write-recursive",
    "fs:allow-appdata-read",
    "fs:scope-appdata",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/C",
            {
              "validator": ".+"
            }
          ]
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/C",
            {
              "validator": ".+"
            }
          ]
        }
      ]
    },
    "shell:allow-execute",
    "shell:allow-open",
    "shell:allow-kill",
    "shell:allow-stdin-write",
    "core:webview:allow-create-webview",
    "core:window:allow-create",
    "core:window:allow-close",
    "core:webview:allow-create-webview-window",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://*.volces.com" },{"url":"https://api.ppinfra.com"},{"url":"http://127.0.0.1:5876"},{"url":"http://ipc.localhost"}],
      "deny": [{ "url": "https://private.tauri.app" }]
    }
  ]
}