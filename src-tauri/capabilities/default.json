{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "video"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "updater:allow-check",
    "updater:allow-download",
    "updater:allow-download-and-install",
    "updater:allow-install",
    "sql:allow-execute",
    "sql:allow-load",
    "sql:allow-select",
    "sql:allow-close",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/C",
            {
              "validator": ".+"
            }
          ]
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/C",
            {
              "validator": ".+"
            }
          ]
        }
      ]
    },
    "shell:allow-execute",
    "shell:allow-open",
    "shell:allow-kill",
    "shell:allow-stdin-write",
    "core:webview:allow-create-webview" ,
    "core:window:allow-create",
    "core:window:allow-close",
    "core:webview:allow-create-webview-window"
    
  ]
}
